<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentoExames.NovoExameActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Exame"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#D21661"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/txtTitulo"/>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Inserir os dados do proximo Exame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTitulo"
            android:id="@+id/txtDescricao"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:layout_margin="24dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDescricao">

        <ImageView
                android:id="@+id/imgExame"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:src="@drawable/ic_user"
                android:scaleType="centerCrop" />

        <EditText
                android:id="@+id/edtNomeExame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Exame"
                android:layout_margin="8dp" />

        <EditText
                android:id="@+id/edtLocalExame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Local do Exame"
                android:layout_margin="8dp" />
        <EditText
                android:id="@+id/edtHorarioExame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Horario do exame"
                android:inputType="numberDecimal"
                android:layout_margin="8dp" />

        <Button
                android:id="@+id/btnCadastrarExame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Cadastrar"
                android:textColor="@color/ColorItemRemedio"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:layout_margin="24dp"
                android:layout_gravity="center_horizontal"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>